<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeteoroloskiPromatrac.Opcije">
  <ContentPage.Content>
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="*"/>
        <RowDefinition Height="auto"/>
      </Grid.RowDefinitions>
      <StackLayout Orientation="Vertical" Grid.Row="0">
        <Image Source="blueline.png" HorizontalOptions="FillAndExpand"/>
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
          <Label Text="Opcije Podataka"/>
        </StackLayout>
        <Image Source="blueline.png" HorizontalOptions="FillAndExpand"/>
        <Button Clicked="ObrisiSve"  Text="Obriši sve prikupljene podatke"/>
        <Button Clicked="PrikaziSveZapise"  Text="Prikaži sve prikupjene podatke"/>       
      </StackLayout>
      <StackLayout Orientation="Vertical" Grid.Row="1">
        <Button Clicked="Info"  Text="O Aplikaciji"/>
        <Image Source="blueline.png" HorizontalOptions="FillAndExpand"/>
      </StackLayout>
    </Grid>
  </ContentPage.Content>
</ContentPage>